## skapat en class
class Animal:
    def __init__(self):
        pass
    
    def __str__(self):
        return "Animal"
##Meny
class Menu:
    my_object = None
    MAIN_MENU_TEXT = """
'-------------------------'
'------- Main Menu -------'
'-------------------------'

1: 'Create object',
2: 'Print Object',
3: 'Delete Object'
"""
##Meny som loopar
    def menu_loop(self):
        self.running = True
        while self.running:
            print(Menu.MAIN_MENU_TEXT)
            choice = self.user_input()
            self.menu_choice(choice)
##Om alternativet som anges är 1 så kommer den fylla variabeln my_object som är tom med innehållet från classen "Animal"      
    def menu_choice(self, choice):
        if choice == 1:
            self.my_object = create_object()
            print("Created Object")
## annars om alternativet som anges är 2 kollar den om my_object innehåller något och isf printar det, om inte skriver den ut följande   
        elif choice == 2:
            if not self.my_object:
                print("There is no object to print")
            else:
                print(self.my_object)
 ## kollar om my_object innehåller något och isf raderar innehållet, om inte printar den följande       
        elif choice == 3:
            if self.my_object:
                del(self.my_object)
                print("Deleted")
            else: 
                print("There is no object to delete")
            
  ##Input som anges till användaren      
    def user_input(self):
        return int(input("Enter your choice [1-3]: "))
##Funktion som skapar ett object från class Animal till variabeln Dog
def create_object():
    dog = Animal()
    return dog
## För att printa classen
if __name__ == '__main__':
    Menu().menu_loop()